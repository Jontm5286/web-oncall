---
import { Image } from "astro:assets";
import Button from "@components/Button.astro";
import { gsap } from "gsap";

import { ScrollTrigger } from "gsap/ScrollTrigger";
import FeatureCard from "@components/FeatureCard.astro";

gsap.registerPlugin(ScrollTrigger);

interface Props {
  title?: string;
  subtitle?: string;
  benefits?: string[];
  primaryButtonText?: string;
  backgroundImage?: string;
}

const {
  title = "Caso de Éxito",
  subtitle = "CEMDOE confió en OnCall para administrar toda su operación de call center. Gracias a nuestra solución, lograron mejorar la reprogramación de citas, reducir cancelaciones y brindar una experiencia más ágil y personalizada a cada paciente.",
  benefits = [
    "100% de gestión omnicanal",
    "Reducción de tiempos de espera",
    "Mayor satisfacción de pacientes",
    "Optimización de costos operativos",
  ],
  primaryButtonText = "Solicita una demo",
  backgroundImage = "/src/assets/woman-working-call-center-talking-with-clients-using-headphones-microphone.jpg",
} = Astro.props as Props;
---

<section class="flex content-center bg-secondary-50 h-[90dvh] scroll-section">
  <div
    class="gap-8 items-center py-8 px-4 mx-auto max-w-6xl xl:gap-16 md:grid md:grid-cols-2 lg:px-6"
  >
    <Image
      class="w-full order-last rounded-lg mask-svg transform transition-all duration-500 ease-in-out animate-fade-in animate-duration-1000 animate-ease-in animate-fill-mode-forwards"
      src={backgroundImage}
      alt="dashboard image"
      width="500"
      height="500"
      loading="lazy"
    />
    <div class="mt-4 md:mt-0">
      <h2
        class="mb-4 text-4xl lg:text-5xl tracking-tight font-extrabold text-secondary-900"
      >
        {title}
      </h2>

      <p class="mb-6 font-light text-secondary-00 md:text-lg">
        {subtitle}
      </p>

      <div class="mb-6">
        <h3 class="text-xl font-semibold mb-3 text-secondary-800">
          Beneficios obtenidos:
        </h3>
        <ul class="space-y-3 list-disc list-inside text-secondary-600">
          {benefits.map((benefit, index) => <li key={index}>{benefit}</li>)}
        </ul>
      </div>

      <Button href="#" text={primaryButtonText} variant="primary" />
    </div>
  </div>
</section>

