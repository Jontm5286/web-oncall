---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="hover:bg-white w-full h-full rounded-lg shadow-sm flex flex-col">
  <a href="#" class="flex flex-col h-full">
    <div class="aspect-video overflow-hidden">
      <Image
        class="rounded-t-lg w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        src={image}
        alt={title}
        width={384}
        height={216}
        loading="lazy"
      />
    </div>
    <div class="p-6 flex-1 flex flex-col">
      <h3 class="mb-3 text-xl font-bold tracking-tight text-gray-900">
        {title}
      </h3>
      <p class="mb-4 flex-1 text-gray-600">
        {description}
      </p>
      <span class="text-primary-600 font-medium inline-flex items-center">
        Saber m√°s
        <svg
          class="w-4 h-4 ml-2"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </span>
    </div>
  </a>
</div>
