---
import { Icon } from "astro-icon/components";

interface Props {
  iconName: string;
  title: string;
  description: string;
  href: string;
}

const { iconName, title, description, href } = Astro.props;
---

<div
  class="hover:bg-primary-100 rounded-lg p-4 hover:shadow-md transition-all duration-300"
>
  <div class="flex w-full items-center my-4">
    <Icon
      name={iconName}
      class="w-12 h-12 text-primary-600 bg-primary-100 rounded-full p-2"
    />
  </div>
  {/* Usamos las props para el título y la descripción */}
  <h3 class="mb-2 text-md font-bold text-secondary-900">{title}</h3>
  <p class="text-secondary-500">{description}</p>
</div>
